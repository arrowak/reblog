<div class="page-header">
  <%= link_to user_post_comments_path(@post), class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_user_post_comment_path(@post, @comment), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show comment</h1>
</div>

<dl class="dl-horizontal">
  <dt>Body:</dt>
  <dd><%= @comment.body %></dd>

  <dt>User:</dt>
  <dd><%= @comment.user %></dd>

  <dt>Post:</dt>
  <dd><%= @comment.post %></dd>

</dl>
